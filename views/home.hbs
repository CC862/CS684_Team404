<!DOCTYPE html>
<html>
<style>
.container {
  display: grid;
  grid-template-rows: auto 1fr; /* set header and main to auto and 1fr respectively */
  grid-template-columns: 1fr; /* set one column for both header and main */
  height: 100vh; /* set height to 100vh for full page height */
}

.header {
  background-color: #1e9939;
  color: #fff;
  padding: 0; /* remove padding from header */
  border-bottom: 2px solid #1e9939; /* add border to header */
}

.title {
  font-size: 36px;
  margin: 0;
  padding: 10px; /* add padding to title */
  border: 2px solid #1e9939; /* add border to title */
  border-bottom: none; /* remove border from bottom of title */
}

.nav {
  background-color: #fafafe; /* add a background color to the nav */
  padding-top: 10px; /* add padding to move nav items down */
}

.nav ul {
  list-style: none;
  justify-content: flex-end;
  text-align: center;
  margin: 5px;
  padding: 0;
}

.nav li {
  margin-left: 10px;
  display: inline-block; /* display list items inline */
}

.nav a {
  color: #120cce;
  text-decoration: none;
  padding: 10px 20px;
  border: 2px solid #fff;
  border-radius: 5px;
  transition: all 0.3s ease;
}

.nav a:hover {
  background-color: #062af8;
  color: #ebebf7eb;
}

.nav a.highlight {
  background-color: #062af8;
  color: #ebebf7eb;
  text-align: center;
}

/*moves already a member option*/
.nav li:first-child {
  position: absolute;
  right: 800px;
}

/*moves signup option*/
.nav li:last-child {
  position: absolute;
  right: 575px;
}

.main {
  padding: 20px;
}

.articles {
  margin-top: 35px;
}

.articles h2 {
  font-size: 32px;
  text-align: center;
}

.article {
  border: 2px solid #7e7a7a;
  padding: 20px;
  margin-bottom: 20px;
}

/*adjusting image display of article */
.article img {
  max-width: 150%;
  height: 400px
}

.article h4 {
  margin: 0;
}

.article p {
  margin-top: 10px;
}


</style>
  <head>
    <meta charset="UTF-8">
    <title>Welcome to the Homepage</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
  </head>

  <body>
    <div class="container">
      <header class="header">
        <h1 class="title">Welcome to the homepage!</h1>
      </header>

      <nav class="nav">
          <ul>
            <li><a href="/signin" class='highlight'>Already a member? Log In</a></li>
            <li><a href="/signup"class='highlight'>Register for our site!</a></li>
          </ul>
      </nav>

      <main class="main">
        <section class="articles">
          <h2>Top Headlines</h2>
          <div id="news"></div>
        </section>
      </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
      $(document).ready(function() {
        fetch('https://newsapi.org/v2/top-headlines?country=us&apiKey=913b6adfc01548c3bf2f5c39612eb959')
          .then(response => response.json())
          .then(data => {
            var newsData = data;
            var newsHtml = '';
            $.each(newsData.articles, function(i, item) {
              newsHtml += '<div class="article">';
                // add image tag here
              newsHtml += '<img src="' + item.urlToImage + '"/>'; 
              //tile of article
              newsHtml += '<h4>' + item.title + '</h4>';
              //article description
              newsHtml += '<p>' + item.description + '</p>';
              //read more link
              newsHtml += '<a href="' + item.url + '">Read more</a>';
              newsHtml += '</div>';
            });
            $('#news').html(newsHtml);
          })
          .catch(error => {
            console.error('Error:', error);
          });
      });
    </script>
  </body>
</html>
